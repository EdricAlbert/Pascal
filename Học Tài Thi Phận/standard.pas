uses    crt;
var     d,r:real;
        n:int64;
begin
        read(n);
        if n=0 then
                write('0')
        else
        begin
        d:=1-4*(-n*2);
        d:=(-1-sqrt(d))/2;
        d:=abs(d);
        r:=d;
        d:=trunc(d);
        if d-r=0 then
                write(d:0:0);
        if d-r<>0 then
        begin
                d:=d+1;
                write(d:0:0);
        end;
        end;
        readln;
end.
